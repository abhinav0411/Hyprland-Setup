{
        "layer": "top",
        "position": "top",
        "reload_style_on_change": true,
        "modules-left": ["hyprland/workspaces"],
        "modules-center": ["clock"],
        "modules-right": ["custom/mpris", "network", "battery", "bluetooth", "custom/volume", "custom/logout"],
        "hyprland/workspaces": {
                "format": "{icon}",
                "on-click": "activate",
                "format-icons": {
                    "1": "ï„‘",
                    "2": "ï„‘",
                    "3": "ï„‘",
                    "4": "ï„‘",
                    "5": "ï„‘",
