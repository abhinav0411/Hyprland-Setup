{
        "layer": "top",
        "position": "top",
        "reload_style_on_change": true,
        "modules-left": ["hyprland/workspaces"],
        "modules-center": ["clock"],
        "modules-right": ["network", "battery", "bluetooth", "pulseaudio"],
        "hyprland/workspaces": {
                "format": "{icon}",
                "on-click": "activate",
                "format-icons": {
                    "1": "ÔÑë",
                    "2": "ÔÑë",
                    "3": "ÔÑë",
                    "4": "ÔÑë",
                    "5": "ÔÑë",
                    "6": "ÔÑë",
                    "7": "ÔÑë",
