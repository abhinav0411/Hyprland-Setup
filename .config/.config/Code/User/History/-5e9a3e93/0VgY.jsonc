{
        "layer": "top",
        "position": "top",
        "reload_style_on_change": true,
        "modules-left": ["hyprland/workspaces"],
        "modules-center": ["clock"],
        "modules-right": ["custom/mpris", "network", "battery", "bluetooth", "custom/volume", "custom/logout"],
        "hyprland/workspaces": {
                "format": "{icon}",
                "on-click": "activate",
                "format-icons": {
                    "1": "",
                    "2": "",
                    "3": "",
                    "4": "",
                    "5": "",
                    "6": "",
                    "7": "",
                    "8": "",
                    "9": "",
                    "active": "",
                    "urgent": "",
                    "persistent": "",
                    "focused": "",
                    "default": ""
                        },
                "sort-by-number": true

		},
        "clock": {
            "format-alt": "{:L%A %d/%m - %I:%M %p}",
            "format": "{:L%I:%M %p}",
            "interval": 1,   
            "tooltip-format": "<tt>{calendar}</tt>",
            "smooth-scrolling-threshold": 0.01,
            "calendar": {
                "mode"          : "year",
                "mode-mon-col"  : 3,
                "weeks-pos"     : "right",
                "on-scroll"     : 1,
                "format": {
                    "months":     "<span color='#ffead3'><b>{}</b></span>",
                    "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                    "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                    "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                    "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                }
            },
            "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
            }
		},
        "network": {
            "format-wifi": " ",
            "format-ethernet":" ",
            "format-disconnected": "",
            "on-click": "kitty waybar/.config/waybar/network.sh"
        },
        "bluetooth": {
            "format": "󰂯 {status}",
            "format-on": "󰂯",
            "format-off": "󰂯 off",
            "format-disabled": "󰂲",
            "format-no-controller": "󰂲",
	    	"format-connected-battery": "{device_battery_percentage}% 󰂯",
            "on-click": "kitty waybar/.config/waybar/bluetooth.sh"
        },

        "custom/logout": {
            "format": "󰗼",
            "on-click": "~/.config/rofi/powermenu.sh > /dev/null"
        },
        
        "battery": {
            "format": "   {capacity}%",
            "format-charging": "   {capacity}%",
            "format-plugged": "   {capacity}%",
            "interval": 30,
            "tooltip": true,
            "on-click": "kitty waybar/.config/waybar/power.sh"
        },
    
        "custom/volume": {
        "format": "   {}",
        "exec": "wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{print int($2*100) \"%\"}'",
        "interval": 2
        },

        "custom/mpris": {
            "exec": "playerctl metadata --format '{{ title }} - {{ artist }}'",
            "interval": 5,
            "return-type": "plain",
            "format": "  {}",
            "tooltip": false
        }


} 
